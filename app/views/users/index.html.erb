<%= render partial: 'shared/navbar_transparent' %>
<main class="Site-content">
  <div class="container panel-body">
    <div class="col-md-12 container-fluid row">

      <div class="container col-md-6">
        <div class="panel panel-body panel-default">
          <h1 class="text-center">Developers</h1>
        </div>
        <% @developers.each do |developer| %>
        <div class="panel panel-default panel-body">
          <div class="col-sm-4 col-md-4">
            <img src= <%= developer.img %> class = "user-img"/>
          </div>
          <div class="col-sm-8 col-md-8">
            <h3><%= link_to developer.visible_name, user_path(developer) %></h3>
            <h4>Developer</h4>
            <p><%= developer.bio %></p>
          </div>
        </div>
        <% end %>
      </div>

      <div class="container col-md-6">
        <div class="panel panel-body panel-default">
          <h1 class="text-center">Designers</h1>
        </div>
        <% @designers.each do |designer| %>
        <div class="panel panel-default panel-body">
         <div class="col-sm-4 col-md-4">
            <img src= <%= designer.img %> class = "user-img"/>
          </div>
          <div class="col-sm-8 col-md-8">
            <h3><%= link_to designer.visible_name, user_path(designer) %></h3>
           <h4>Designer</h4>
           <p><%= designer.bio %></p>
          </div>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</main>
