<%= form_for :review do |f| %>

<%= f.label :rating %>
<%= f.number_field :rating, class: "form-control" %>

<%= f.label :body, "Leave a Review"%>
<%= f.text_area :body, class: "form-control" %>

<%= f.hidden_field :user_id, value: @user.id, class: "form-control" %>
<%= f.submit "Submit", class: "btn btn-success" %>
<%end%>

<% if review.reviewer %>
  <p> <%= link_to "Delete Review", review_path(Review.find_by(user_id: params[:id])), method: :delete %> </p>
<% end %>
