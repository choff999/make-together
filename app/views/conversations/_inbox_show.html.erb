<h1><%= @reciever.visible_name %></h1>
<ul>
  <% @messages.each do |message| %>
    <li><%= message.body %> -- <%= message.user.visible_name %> </li>
  <% end %>
</ul>

  <%= form_for(@message, url: inbox_message_path(@conversation)) do |f| %>
    <div class="form-group">
      <%= f.text_area :body, autofocus: true, class: "form-control", placeholder: "type your message here"  %>
    </div>
    <div class="form-group">
      <%= f.submit "Send", class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
