<%= render partial: 'shared/navbar_transparent' %>

<main class="Site-content">
  <div class= "container">
    <h1>Inbox</h1>
    <div class="col-xs-6 col-md-4">
      <ul class="list-group">
        <% @conversations.each do |conversation| %>
        <li class="list-group-item">
          <% if conversation.recipient == current_user %>
            <%= link_to conversation.sender.visible_name, inbox_messages_show_path(conversation)  %>
          <% else %>
            <%= link_to conversation.recipient.visible_name, inbox_messages_show_path(conversation)  %>
          <% end %>
        <span class="badge"><%=conversation.messages.length%></span></li>

        <% end %>
      </ul>
    </div>

    <% if @conversation %>
    <div class="col-xs-12 col-md-8">
      <%= render partial: 'inbox_show' %>
    </div>
    <% end %>
  </div>
</main>
