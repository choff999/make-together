<main class ="site-content">
  <div class= "container">
    <h1>Send a message to <%= @receiver.visible_name %></h1>

    <%= form_for @message, url: {controller: 'conversations', action: 'inbox'} do |f| %>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, autofocus: true, class: 'form-control'%>
      </div>

      <%= f.hidden_field :sender_id, value: current_user.id %>
      <%= f.hidden_field :receiver_id, value: @receiver.id %>
      <%= f.submit "Send", class: 'btn btn-primary btn-lg' %>
    <% end %>

  </div>
</main>
