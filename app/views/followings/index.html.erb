<main class="Site-content">
  <div class="container panel-body">
    <h1 class="first-name-color"><%=current_user.visible_name %></h1>
    <div class="col-md-12 container-fluid row">

      <div class="container col-md-5">

        <div class="panel panel-default panel-body categories">
          <h3 class= "#followers"><a class = "following-sort-button" href= "#">FOLLOWERS</a></h3>
          <h3 class ="#followed_users"><a class = "following-sort-button" href= "#">FOLLOWING</a></h3>
        </div>
      </div>


      <div class="row container-fluid col-md-6 sorted-following-list">

        <div id="followers" class= "sorted-following active">
          <% @user.followers.each do |follower| %>
            <%= render '/users/index_show', user: follower %>
          <% end %>
        </div>

      <div id="followed_users" class= "sorted-following hidden">
        <% @user.followed_users.each do |user| %>
        <%= render '/users/index_show', user: user %>
        <% end %>
      </div>
    </div>
  </div>

  </div>
</main>
