<%= render partial: 'shared/navbar_opaque' %>

<main class="Site-content">

<div class="container-fluid">

  <%if current_user && @project.user.id === current_user.id %>
    <%=link_to 'edit | ', edit_project_path(@project) %>
  <%end%>
  <%= link_to 'back to projects', projects_path %>


<div class="container panel-body"
<div class="row">
  <div class="panel panel-default panel-body col-md-3">
  <img src= <%=@project.img%> class="img-responsive project-img">
</div>

<div class="row container-fluid">
  <%if current_user && @project.user.id === current_user.id %>
    <%=link_to 'edit | ', edit_project_path(@project) %>
  <%end%>
    <div class="panel-body col-md-8">
  <h1><%= @project.title.capitalize %></h1>

  <h3><%= @project.tagline%></h3>
<!-- </div>
</div>
<div class="panel-body col-md-7"> -->
 <h4>Created by: <%= link_to @project.user.visible_name, user_path(@project.user) %></h4>
 <p>Expires: <%=@project.date%></p>
 <h4> <%=@project.favorites.length%>
 <% if current_user && current_user.has_favorited(@project) %>
                  <%= link_to image_tag("heart-red.png"), delete_favorite_path(project_id: @project.id, user_id: current_user.id) %>
                <% elsif current_user %>
                  <%= link_to image_tag("heart-grey.png"), new_favorite_path(project_id: @project.id, user_id: current_user.id) %>
                <% end %>
              </h4>
</div>



         <h4><% if current_user %>
              <% if (current_user == @project.user) && @project.is_flagged %>
              reported
              <%elsif @project.is_flagged %>
                <%if current_user.id == @project.is_flagged.user_id %>
                 <%=link_to 'reported, click to remove flag', delete_flagged_project_path(project_id: @project.id) %>
                <%else%>
                   <%=link_to 'report', new_flagged_project_path(project_id: @project.id) %>
                <%end%>
               <% elsif current_user != @project.user %>

               <%=link_to 'report', new_flagged_project_path(project_id: @project.id) %>
               <%end%>
               <%end%>
         </h4>



  <div class="panel panel-default panel-body col-md-11">
  <h4>Description:</h4>
  <p><%=@project.description%></p>
  </div>
</div>

<div id="tags">
  <h4>Tags:</h4>
  <% @project.tags.each do |tag| %>
    #<%= link_to tag.body, tag_path(tag) %>
  <% end %>
</div>

</div>

</div>
</main>
