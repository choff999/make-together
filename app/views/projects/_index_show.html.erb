<div class="panel panel-default  project-white-box strong-projects projects-container">
  <div class="panel-body project">
    <div class="row">

      <div class="col-xs-3 col-md-3">
          <img src= <%= project.img %> class="img-thumbnail">
      </div>

      <div class="col-xs-9 col-md-9">
            <% if current_user && project.user == current_user %>
             <%=link_to 'edit', edit_project_path(project) %>
           <%end%>
       <h1><%=link_to project.title, project_path(project)%></h1>
       <h3><%= project.tagline %></h3>
       <h4>posted on: <%= project.created_at.strftime("%m/%d/%Y") %></h4>

       <div class="row">
         <div class="col-xs-8 col-md-8">

             <h4><%= project.description %></h4>
         </div>

         <div class="col-xs-2 col-md-2">

             <h4><%= project.favorites.length %>
                <% if current_user && current_user.has_favorited(project) %>
                  <%= link_to image_tag("heart-red.png"), delete_favorite_path(project_id: project.id, user_id: current_user.id) %>
                <% elsif current_user %>
                  <%= link_to image_tag("heart-grey.png"), new_favorite_path(project_id: project.id, user_id: current_user.id) %>
                <% else %>
                  <%= image_tag("heart-grey.png") %>
                <% end %>
             </h4>

         </div>

      </div>
   </div>
  </div>
</div>
</div>
