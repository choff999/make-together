<%= form_for @project do |f| %>
  <%= render partial: 'shared/error_messages', locals: { object: @project } %>
  
 <%= f.label :title %>
 <%= f.text_field :title, autofocus: true %>

 <%= f.label :tagline %>
 <%= f.text_field :tagline %>

 <%= f.label :description %>
 <%=f.text_field :description %>

 <%= f.label :expiration %>
 <%= f.date_field :expiration %><br>

 <%= f.label :tags, "Enter tags as a comma separated list"%><br>
 <%= f.text_field :tags, autofocus: true %>

 <%= f.hidden_field :user_id, value: current_user.id %>
 <%= f.submit %>
<%end%>
